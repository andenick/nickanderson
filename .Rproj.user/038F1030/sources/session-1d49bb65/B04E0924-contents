position = "stack", stat = "identity") +
ggtitle("% of Total Change in Market Value of all Outstanding Treasuries
        for a .01% Decrease in Interest Rates
        (Only Marketable, Fixed Rate)") +
ylab("Percentage") +
xlab("Record Date") +
guides(fill = guide_legend(title = "Years to Maturity")) +
scale_fill_brewer(palette = "Dark2") +
theme_bw() +
theme(
title = element_text(size = 10, face = "bold"),
