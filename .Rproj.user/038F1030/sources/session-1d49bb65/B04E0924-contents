#i'm going to change categories now we will use YearsCat so that we can get a more precise picture of the debt load of the united states


looptest_graph$yearsCat <- factor(looptest_graph$yearsCat, ordered = FALSE)
looptest_graph$yearsCat <- relevel(looptest_graph$yearsCat,c("less than a year"))


ggDurApproxUSD4 <- ggplot(looptest_graph) +
geom_bar(aes(x = recDate, y = -durApproxInUSD/1000, fill = factor(yearsCat,c("less than a year", "1-2 years", "2-4 years", "4-8 years", "8-12 years", "12-20 years", "20+ years"))),
position = "stack", stat = "identity") +
ggtitle("$B change in Market Value of all Outstanding Treasuries
        for a .01% Decrease in Interest Rates
        (Macaulay Duration Approximation)
        (Only Marketable, Fixed Rate)") +
ylab("Billions of Dollars") +
xlab("Record Date") +
guides(fill = guide_legend(title = "Years to Maturity")) +
scale_fill_brewer(palette = "Dark2") +
theme_bw() +
theme(
title = element_text(size = 10, face = "bold"),
axis.title = element_text(size = 14),
axis.text = element_text(size = 14),
legend.title = element_text(size = 14),
legend.text = element_text(size = 12),
panel.grid.major = element_line(color = "lightgray"),
panel.grid.minor = element_blank(),
legend.position = "right")

